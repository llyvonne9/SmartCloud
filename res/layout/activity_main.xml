<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/scrollView1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#76EEC6" >
	
	<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="#76EEC6">


    <RelativeLayout
        android:id="@+id/relativeLayout1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView4"
        android:layout_marginTop="1px"
        android:background="#123456"
        android:paddingTop="20px"
        android:paddingRight="20px"
        android:paddingLeft="20px"
        android:paddingBottom="10px"
        android:layout_centerHorizontal="true" >

        <ImageView
            android:id="@+id/imageView1"
            android:layout_width="wrap_content"
            android:layout_height="160px"
            android:layout_below="@+id/textView1"
            android:layout_centerHorizontal="true"
            android:src="@drawable/login" />
<!--  
        <TextView
            android:id="@+id/textView1"
            android:textColor="#FFFFFF"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:text="Welcom to SC" />-->

        <TextView
            android:id="@+id/textView2"
            android:textColor="#FFFFFF"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/imageView1"
            android:layout_marginTop="26px"
            android:text="Username" />

        <EditText
            android:id="@+id/usernameLogEditText"
            android:layout_width="350px"
            android:layout_height="55px"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/textView2"
            android:layout_marginTop="6px"
            android:background="#FFFFFF"
            android:hint="Enter your username" >

            <requestFocus />
        </EditText>

        <TextView
            android:id="@+id/textView3"
            android:textColor="#FFFFFF"            
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/usernameLogEditText"
            android:layout_marginTop="16px"
            android:text="Password" />

        <EditText
            android:id="@+id/passwoedLogEditText"
            android:layout_width="350px"
            android:layout_height="55px"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/textView3"
            android:layout_marginTop="6px"
            android:hint="Enter your password"
            android:background="#FFFFFF"
            android:inputType="textPassword" />
        
        <Button
	        android:id="@+id/loginButton"
	        android:layout_width="350px"
	        android:layout_height="65px"
	        android:layout_below="@+id/RememberCheckBox"
	        android:layout_marginTop="10px"
	        android:layout_centerHorizontal="true"
	        android:background="@drawable/buttonselector"
	        android:text="Log in" />

        <CheckBox
            android:id="@+id/RememberCheckBox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/passwoedLogEditText"
            android:layout_below="@+id/passwoedLogEditText"
            android:textColor="#FFFFFF"
            android:textSize="14dp"
            android:text="Remember password" />
        
        <Button
	        android:id="@+id/buttonForgetPassword"
	        android:layout_width="150px"
	        android:layout_height="50px"
	        android:layout_marginTop="10px"
	        android:layout_alignLeft="@+id/loginButton"
	        android:layout_below="@+id/loginButton"
	        android:background="#123456"
	        android:textColor="#FFFFFF"
	        android:textSize="12dp"
	        android:text="Forget password" /> 
	        
	   <Button
	        android:id="@+id/buttonRegisterInLogin"
	        android:layout_width="100px"
	        android:layout_height="50px"
	        android:layout_marginTop="10px"
	        android:layout_alignRight="@+id/loginButton"
	        android:layout_below="@+id/loginButton"
	        android:background="#123456"
	        android:textColor="#FFFFFF"
	        android:textSize="12dp"
	        android:text="register" /> 

    </RelativeLayout>



</RelativeLayout>
</ScrollView>