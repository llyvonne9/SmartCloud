<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="0dp"
    android:paddingLeft="0dp"
    android:paddingRight="0dp"
    android:paddingTop="0dp"
    tools:context=".MainInterfceActivity" >
    
    <include
        android:id="@+id/title_main_include"
        layout="@layout/title_main" />
    
    
    <android.support.v4.view.ViewPager
        android:id="@+id/viewpager"
        android:layout_width="match_parent"
        android:layout_height="400dp"
        android:layout_below="@+id/title_main_include"
        android:paddingTop="10dp"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" >

        <ImageView
            android:id="@+id/filesIcon"
            android:layout_width="58dp"
            android:layout_height="58dp"
            android:layout_weight="1"
            android:src="@drawable/file" />
        
        <ImageView
            android:id="@+id/personalInfoIcon"
            android:layout_width="58dp"
            android:layout_height="58dp"
            android:layout_weight="1"
            android:src="@drawable/upload" />

        <ImageView
            android:id="@+id/transferIcon"
            android:layout_width="58dp"
            android:layout_height="58dp"
            android:layout_weight="1"
            android:src="@drawable/transfer" />

        <ImageView
            android:id="@+id/chatIcon"
            android:layout_width="58dp"
            android:layout_height="58dp"
            android:layout_weight="1"
            android:src="@drawable/chat" />
        
        <ImageView
            android:id="@+id/personIcon"
            android:layout_width="58dp"
            android:layout_height="58dp"
            android:layout_weight="1"
            android:src="@drawable/person" />


    </LinearLayout>


</RelativeLayout>
